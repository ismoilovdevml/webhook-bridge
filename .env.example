# Application Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Database
# For development: SQLite
DATABASE_URL=sqlite:///./webhook_bridge.db
# For production: PostgreSQL (recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/webhook_bridge

# Security
# IMPORTANT: Generate new random keys for production!
# Run: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING
WEBHOOK_SECRET=CHANGE_THIS_TO_RANDOM_STRING
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_STRING

# CORS Settings
# Comma-separated list of allowed origins
# For production: Use your actual domain
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Features
ENABLE_ANALYTICS=true
ENABLE_EVENT_LOGGING=true
MAX_EVENTS_PER_PAGE=50

# API Authentication
API_KEY_ENABLED=true
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Retry Logic
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0
