# Application Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./webhook_bridge.db

# Security
SECRET_KEY=change-this-in-production-to-a-random-string
WEBHOOK_SECRET=optional-webhook-secret-for-validation

# CORS Settings
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Features
ENABLE_ANALYTICS=true
ENABLE_EVENT_LOGGING=true
MAX_EVENTS_PER_PAGE=50
